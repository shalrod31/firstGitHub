package in28mintues.com;

import java.math.BigDecimal;

public class SimpleInterestCalculator {
	private int principle;
	private int interest;
	private int noOfYears;

	public SimpleInterestCalculator(int principle, int interest) { // contructor, initate values by call'g class
		this.principle = principle;
		this.interest = interest;
	
	}
	public noOfYears(int noOfYears) { // contructor, initate values by call'g class
		this.noOfYears = noOfYears;
	
	}
	public int getPrinciple() {
		return principle;
	}

	public void setPrinciple(int principle) {
		this.principle = principle;
	}

	public int getInterest() {
		return interest;
	}

	public void setInterest(int interest) {
		this.interest = interest;
	}
	
	public int principleMultiplyInterest() {
		return principle * interest;
	}
	
	public int totalSum() {
		return principle + principleMultiplyInterest()* noOfYears;
		
	}

	
	
	
}
